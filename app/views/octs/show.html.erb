<%- model_class = Oct -%>
<div class="page-header">
  <h1><%=t '.title', :default => Oct %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hyper) %></dt>
      <dd><pre class="prettyprint"><%= @oct.hyper %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:alpha) %></dt>
      <dd><pre class="prettyprint"><%= @oct.alpha %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:color) %></dt>
      <dd><pre class="prettyprint"><%= @oct.color %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sign_sha1) %></dt>
      <dd><pre class="prettyprint"><%= @oct.sign_sha1 %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              octs_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_oct_path(@oct), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              oct_path(@oct),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

