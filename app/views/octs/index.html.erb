<h1>Listing octs</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Oct</th>
      <th>Hyper</th>
      <th>Alpha</th>
      <th>Color</th>
      <th>Sign sha1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @octs.each do |oct| %>
      <tr>
        <td><%= oct.player %></td>
        <td><%= oct.oct %></td>
        <td><%= oct.hyper %></td>
        <td><%= oct.alpha %></td>
        <td><%= oct.color %></td>
        <td><%= oct.sign_sha1 %></td>
        <td><%= link_to 'Show', oct %></td>
        <td><%= link_to 'Edit', edit_oct_path(oct) %></td>
        <td><%= link_to 'Destroy', oct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oct', new_oct_path %>
